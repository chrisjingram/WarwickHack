{
  "manifest_version": 2,

  "name": "Text Classification System",
  "description": "Memes",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon_19.png",
    "default_popup": "popup_selection.html",
    "default_title": "Dank memes!"
  },

  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },

  "permissions": [
    "tabs",
    "<all_urls>"
  ],

  "content_scripts": [{
    "matches":    ["<all_urls>"],
    "js":         ["content.js"],
    "run_at":     "document_start",
    "all_frames": false
  }],

  "icons": {
    "16": "icon_19.png",
    "48": "icon_19.png",
    "128": "icon_19.png"
  }
}
